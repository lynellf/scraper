<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js")
        title #{title}
    body
    h1.text-center.mt-3 #{title}
        .container.d-flex.flex-column.mt-3
            input.p-2#url(type="text" placeholder="Insert URL")
            button.btn.btn-primary.mt-3#scrape Scrape
            .mt-3#response
    script(src="https://code.jquery.com/jquery-3.3.1.js")
    script.
        document.getElementById('scrape').addEventListener('click', function(event) {
            document.getElementById('response').textContent = '';
            var data = {
                url: document.getElementById('url').value
            };
            console.log(data);
            $.ajax({
                type: 'POST',
                url: '/scrape',
                data: data
            }).done(function(response) {
                document.getElementById('response').textContent = response;
            });
        });